    // Search Section
    section#search
      .container
        .row
          .col-lg-12.text-center
            h2.section-heading Search
            h3.section-subheading.text-muted Search for your favorite beers and discover new ones.

        div(ng-controller='ctrl1')
          .row
            .col-lg-2
            .col-lg-8
              input(type='text', class='form-control', ng-model='input', placeholder='Enter a Beer')
              br
              br
              br
              br
          //
            div(class='row text-center')
                div(class='col-xs-6 col-md-3', ng-repeat='beer in data')
                    //div(style = 'border:5px solid silver; border-radius:10px')
                    div
                        br
                        img.portfolio-img(ng-show='beer.image != undefined', src='{{beer.image}}', alt='', height="200", width="200")
                        img.portfolio-img(ng-show='beer.image == undefined', src='/images/no_image.png', alt='', height="200", width="200")
                        br
                        br
                        h3 {{beer.name}}
                        div Beer ID: {{beer.beerId}}
                        br
                        br
                    br
                    br
          .row
            div(class='col-md-3 col-sm-6 portfolio-item', ng-repeat='beer in data')
              a.portfolio-link(href='#portfolioModal1', data-toggle='modal')
                .portfolio-hover
                  .portfolio-hover-content
                    i.fa.fa-plus.fa-3x
                img.img-responsive(ng-show='beer.image != undefined', align='middle', src='{{beer.image}}', alt='')
                img.img-responsive(ng-show='beer.image == undefined', align='middle', src='/img/defaultbeer.png', alt='')
              .portfolio-caption
                h4 {{beer.name}}

