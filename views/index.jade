extends layout

block content
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')  
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#')
                    //img(alt='Brand', src='../stylesheets/Icon_BeerBuddy.png')
                    img.navicon(src='../images/Icon_BeerBuddy.png')
            .navbar-collapse.collapse
                form.navbar-form.navbar-right(role='form')
                        a.btn.btn-primary(href='/auth/facebook') Log in with Facebook
                            i.fa.fa-facebook-official

            // /.navbar-collapse
    // Main jumbotron for a primary marketing message or call to action
    .jumbotron.jumbotron-fluid
        .container
            .row
                .col-lg-12
                    img.logo(src='../images/logo_BeerBuddy.png')
                    form.search(name="search", method="post")
                        input(type="text", name="input", placeholder= "Search for a beer...")
                        input(type='submit', value='Go')


    .container
        div(ng-controller='ctrl1')
            div(class='row')
                button(type='button', class='btn btn-default btn-lg', ng-click='get()') Get
                br
                br
            div(class='row')
                div(class='col-xs-6 col-md-3', ng-repeat='beer in data')
                    //div(style = 'border:5px solid silver; border-radius:10px')
                    div
                        br
                        img(ng-show='beer.image != undefined', src='{{beer.image}}', alt='', height="200", width="200")
                        img(ng-show='beer.image == undefined', src='/images/no_image.png', alt='', height="200", width="200")
                        br
                        br
                        h3 {{beer.name}} 
                        div Beer ID: {{beer.beerId}}
                        br
                        br
                    br
                    br
        // /.row
        hr
        // Pagination
        .row.text-center
            .col-lg-12
                ul.pagination
                    li
                        a(href='#') «
                    li.active
                        a(href='#') 1
                    li
                        a(href='#') 2
                    li
                        a(href='#') 3
                    li
                        a(href='#') 4
                    li
                        a(href='#') 5
                    li
                        a(href='#') »
        // /.row
        hr
        // Footer
        footer
            .row
                .col-lg-12
                    p Copyright © Your Website 2014



